<h1>Total Students =  <%= @students.count%></h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Email</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>

  <% @students.each do |student|%>
    <tr>
      <th scope="row"><%= student.id %></th>
      <td><%= student.name %></td>
      <td><%= student.age %></td>
      <td><%= student.email %></td>
      <td>action</td>
    </tr>    
    <% end %>
  </tbody>
</table>

